{
  "name": "mad-logger",
  "version": "3.0.0",
  "description": "Simple Node logger based on winston",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node .",
    "restart": "rm -rf build && npm run start",
    "test": "mocha",
    "test:watch": "npm run test -- -w --recursive",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "format": "prettier **/*.ts --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomimelo/mad-logger.git"
  },
  "keywords": [
    "winston",
    "logger",
    "pino",
    "stream",
    "console",
    "logs",
    "logging",
    "tools",
    "json"
  ],
  "author": "Tom√°s Melone",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomimelo/mad-logger/issues"
  },
  "homepage": "https://github.com/tomimelo/mad-logger#readme",
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "colors": "^1.4.0",
    "mad-error": "^1.3.0",
    "pino": "^8.7.0",
    "winston": "^3.8.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "chai": "^4.3.7",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
